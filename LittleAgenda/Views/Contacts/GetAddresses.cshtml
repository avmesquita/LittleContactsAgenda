@model IEnumerable<LittleAgenda.Entity.Address>

<h5>
	Addresses
</h5>

@if (Model.Count() > 0)
{
	<table class="table">
		<tr>
			<th></th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.AddressContent)
				</td>
			</tr>
		}
	</table>
}
else
{
	<p style="text-align:center;">
		No Addresses found.
	</p>

}
