@model LittleAgenda.Entity.Contact

@{
	ViewBag.Title = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Contact Details</h2>
<br />
<div class="card" style="">
	<div class="card-header text-center bg-info" style="height:50px;color:white;">
		<h5 class="card-title" style="vertical-align:middle;font-size:24px;text-align:left;">@Html.DisplayFor(model => model.Name)</h5>
	</div>
	<div class="card-body">
		<ul class="list-group list-group-flush">
			@if (Model.FavoriteTag)
			{
				<li class="list-group-item">
					<span class="fa fa-star" alt="Favorite Contact" style="color:goldenrod;">&nbsp;Favorited</span>
				</li>
			}
			<li class="list-group-item">@Html.DisplayFor(model => model.Observation)</li>
		</ul>
		<br /><br />
		<hr />
		<p class="card-text">
			<div class="Addresses">
				@{Html.RenderAction("Index", "Addresses", Model.Addresses); }
			</div>
		</p>
		<br /><br />
		<hr />
		<p class="card-text">
			<div class="Emails">
				@{Html.RenderAction("Index", "Emails", Model.Emails); }
			</div>
		</p>
		<br /><br />
		<hr />
		<p class="card-text">

			<div class="Telephones">
				@{Html.RenderAction("Index", "Telephones", Model.Telephones); }
			</div>
		</p>
		<br /><br />
	</div>
	<div class="card-footer bg-info">		
		@Html.ActionLink(" ", "Edit", new { id = Model.ContactId }, new { @class = "btn btn-warning btn-large fa fa-pencil", title = "Edit" })
	</div>
</div>

@Html.Partial("_DefaultBack")
