@model LittleAgenda.Entity.Contact

<div class="modal" id="insertEmail@Model.ContactId" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Insert New E-Mail Account</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				@{ Html.RenderAction("Create", "Emails", new { ContacId = Model.ContactId }); }
			</div>
			<div class="modal-footer">
				<!--<button type="button" class="btn btn-primary">Save changes</button>-->
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>
