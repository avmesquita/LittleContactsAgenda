@model IEnumerable<LittleAgenda.Entity.Email>

<h5>
	E-Mails
</h5>
@if (Model.Count() > 0)
{
	<table class="table">
		<tr>
			<th></th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.EmailContent)
				</td>
			</tr>
		}
	</table>
}
else
{
	<p style="text-align:center;">
		No Emails found.
	</p>
}

