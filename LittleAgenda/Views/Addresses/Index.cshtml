@model IEnumerable<LittleAgenda.Entity.Address>
@{
	Layout = "";
}
@if (Model != null && Model.Count() > 0)
{
	<table class="table">
		<tr>
			<th></th>
			<th></th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.ActionLink(" ", "Delete", new { ContactId = item.ContactId, id = item.AddressId }, new { @class = "btn btn-large btn-danger fa fa-trash", title = "Delete" })
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.AddressContent)
				</td>
			</tr>
		}
	</table>
}
else
{
	<p style="text-align:center;font-size:14px;">
		No Addresses found.
	</p>
}
