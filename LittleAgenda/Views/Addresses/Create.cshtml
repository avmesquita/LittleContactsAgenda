@model LittleAgenda.Entity.Address

@{
	Layout = "";
}
<div class="container">
	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-horizontal">
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.AddressId)
			@Html.HiddenFor(model => model.ContactId)

			<div class="form-group">
				
					@Html.LabelFor(model => model.AddressContent, htmlAttributes: new { @class = "control-label col-md-12" })
				
				<div class="col-md-12">
					@Html.EditorFor(model => model.AddressContent, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.AddressContent, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Create" class="btn btn-success" />
				</div>
			</div>
		</div>
	}
</div>
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
